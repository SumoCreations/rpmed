{
  "name": "rpmed-service-api",
  "version": "1.0.0",
  "description": "A serverless GraphQL API for the RPMed Customer Service Portal.",
  "main": "app/index.json",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "start": "npm run killDynamo; sls offline start",
    "lint": "tslint -p tsconfig.json",
    "killDynamo": "lsof -n -i:8000 | grep LISTEN | awk '{ print $2 }' | uniq | xargs kill -9"
  },
  "files": [
    "app/**/*"
  ],
  "dependencies": {
    "@types/lodash": "^4.14.123",
    "apollo-server-lambda": "^2.4.8",
    "bcryptjs": "^2.4.3",
    "graphql": "^14.2.1",
    "graphql-tools": "^4.0.4",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.11",
    "middy": "^0.23.0",
    "rpmed-validation-schema": "git+https://github.com/SumoCreations/rpmed-validation-schema.git",
    "serverless": "^1.41.0",
    "serverless-plugin-graphiql": "^0.3.0",
    "uuid": "^3.3.2",
    "validator": "^10.11.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.17",
    "@types/aws-sdk": "^2.7.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/jest": "^24.0.11",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/node": "^8.0.57",
    "@types/uuid": "^3.4.4",
    "@types/validator": "^10.9.0",
    "jest": "^24.5.0",
    "prettier": "^1.16.4",
    "serverless-dynamodb-local": "^1.0.2",
    "serverless-offline": "^4.9.2",
    "serverless-webpack": "^5.1.1",
    "source-map-support": "^0.5.6",
    "ts-jest": "^24.0.0",
    "ts-loader": "^4.2.0",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^2.9.2",
    "webpack": "^4.5.0"
  },
  "author": "The serverless webpack authors (https://github.com/elastic-coders/serverless-webpack)",
  "license": "MIT"
}
