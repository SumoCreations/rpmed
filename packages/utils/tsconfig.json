{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext", "ESNext", "ESNext.Array"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "preserve",
    "declaration": true,
    "outDir": "./lib"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "__tests__",
    "**/__tests__/*",
    "**/*.test.*",
    "lib"
  ]
}
