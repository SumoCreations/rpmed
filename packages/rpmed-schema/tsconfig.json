{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["dom", "dom.iterable", "esnext", "ESNext", "ESNext.Array"],
    "module": "es6",
    "declaration": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "strict": true,
    "types": ["jest"],
    "jsx": "react",
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "__tests__",
    "**/__tests__/*",
    "**/*.test.*",
    "lib"
  ]
}
