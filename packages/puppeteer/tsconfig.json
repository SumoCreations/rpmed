{
  "compilerOptions": {
    "lib": ["es2017", "esnext.asynciterable"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2017",
    "esModuleInterop": true,
    "outDir": "lib",
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
